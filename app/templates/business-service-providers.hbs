<div class="header">
  <h1>Business Service Providers</h1>
</div>
<div class="content">
  <form class="pure-form pure-form-stacked search" {{action "search" on="submit"}}>
    <fieldset>
    <label for="sources">Keyword</label>
      {{input class="pure-input-1" value=qField}}
      <div class="pure-g">

        <div class="pure-u-1 pure-u-md-11-24 countries">
          <label for="itaOffice">ITA Office</label>
          {{view "select2"
            content=itaOfficeList
            value=itaOfficeField
            optionValuePath="content.label"
            optionLabelPath="content.label"
            prompt="All"
            id="itaOffice"
            class="pure-input-1"}}
        </div>

        <div class="pure-u-1 pure-u-md-11-24 categories">
          <label for="category">Category</label>
          {{view "select2"
            content=categoryList
            value=categoryField
            optionValuePath="content.label"
            optionLabelPath="content.label"
            prompt="All"
            id="category"
            class="pure-input-1"}}
        </div>

        <div class="pure-u-1 pure-u-md-11-24 sources">
        {{input type="submit" value="Search" class="pure-u-1 pure-u-md-11-24 pure-button pure-button-primary"}}
        </div>
      </div>
    </fieldset>
  </form>

  {{outlet}}
</div>
