<div class="header">
  <h1>Consolidated Screening List</h1>
</div>
<div class="content">
  <form class="pure-form pure-form-stacked search" {{action "search" on="submit"}}>
    <fieldset>
      {{input class="pure-input-1" placeholder="Search" value=qField}}
      <div class="pure-g">
        <div class="pure-u-10-24 pure-u-md-10-24 countries">
          {{countries-field countriesField=countriesField countries=countries}}
        </div>
        <div class="pure-u-7-24 pure-u-md-7-24 sources">
          {{sources-field sourcesField=sourcesField}}
        </div>
        <div class="pure-u-4-24 pure-u-md-4-24 sdn-type">
          {{sdn-type-field sdnTypeField=sdnTypeField}}
        </div>
        <div class="pure-u-1 pure-u-md-1">
          {{input type="submit" value="Search" class="pure-u-1-5 pure-u-md-1-5 pure-button pure-button-primary"}}
        </div>
      </div>
    </fieldset>
  </form>

  {{total-results total=total}}

  <div id="search-results">
    {{#each document in content}}
      {{search-result document=document}}
    {{/each}}
  </div>

  <div class="pages">
    {{#each page in pagesInfo}}
      {{#if page.isCurrent}}
        <button class="pure-button pure-button-disabled">{{page.text}}</button>
      {{else}}
        <button class="pure-button" {{action "search" page.page}}>{{page.text}}</button>
      {{/if}}
    {{/each}}
  </div>
</div>
