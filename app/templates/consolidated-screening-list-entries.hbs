<div class="header">
  <h1>Consolidated Screening List</h1>
</div>
<div class="content">
  <form class="pure-form pure-form-stacked search" {{action "search" on="submit"}}>
    <fieldset>
      {{input class="pure-input-1" placeholder="Search" value=qField}}
      <div class="pure-g">
        <div class="pure-u-1 pure-u-md-10-24 countries">
          <label for="countries">Countries</label>
          {{view "select2"
            content=countryList
            selection=countriesField
            optionValuePath="content.value"
            optionLabelPath="content.label"
            id="countries"
            class="pure-input-1"
            multiple="true"}}
        </div>
        <div class="pure-u-1 pure-u-md-7-24 sources">
          <label for="sources">Sources</label>
          {{view "select2"
            content=sourceList
            selection=sourcesField
            optionValuePath="content.value"
            optionLabelPath="content.label"
            id="sources"
            class="pure-input-1"
            multiple="true"}}
        </div>
        <div class="pure-u-1 pure-u-md-4-24 sdn-type">
          <label for="sdn-type">SDN Type</label>
          {{view "select2"
            content=sdnTypeList
            selection=sdnTypeField
            optionValuePath="content.value"
            optionLabelPath="content.label"
            id="sdn-type"
            class="pure-input-1"}}
        </div>
        <div class="pure-u-1 pure-u-md-1">
          {{input type="submit" value="Search" class="pure-u-1 pure-u-md-1-5 pure-button pure-button-primary"}}
        </div>
      </div>
    </fieldset>
  </form>

  {{outlet}}
</div>
