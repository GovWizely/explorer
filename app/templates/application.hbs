  </div>


{{else}}


  <div id="layout">
    <!-- Menu toggle -->
    <a href="#menu" id="menuLink" class="menu-link">
      <!-- Hamburger icon -->
      <span></span>
    </a>

    <div id="menu">
      <div class="pure-menu pure-menu-open">
        {{#link-to "index" class="pure-menu-heading"}}{{title}}{{/link-to}}
        <h3>Available APIs</h3>
        <ul>
          <li>{{#link-to "consolidated-screening-list-entries"}}CSL{{/link-to}}</li>
          <li>{{#link-to "trade-events"}}Trade Events{{/link-to}}</li>
          <li>{{#link-to "faqs"}}FAQs{{/link-to}}</li>
          <li>{{#link-to "tariff-rates"}}Tariff Rates{{/link-to}}</li>
          <li>{{#link-to "trade-leads"}}Trade Leads{{/link-to}}</li>
          <li>{{#link-to "market-research-library"}}Market Research Library{{/link-to}}</li>
          <li>{{#link-to "ita-office-locations"}}ITA Office Locations{{/link-to}}</li>
        </ul>
      </div>
    </div>

    <div id="main">
      {{outlet}}
    </div>
  </div>


{{/if}}
